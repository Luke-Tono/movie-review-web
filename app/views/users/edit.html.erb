<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">Edit Account Information</h2>
      </div>
      <div class="card-body">
        <%= render 'shared/errors', obj: @user %>
        
        <%= form_with(model: @user, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :username, "Username", class: "form-label" %>
            <%= f.text_field :username, class: "form-control" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :password, "New Password", class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
            <div class="form-text">Leave blank if you do not want to change your password</div>
          </div>
          
          <div class="mb-3">
            <%= f.label :avatar, "Avatar URL", class: "form-label" %>
            <%= f.text_field :avatar, class: "form-control" %>
          </div>
          
          <div class="text-center">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <%= link_to "Back to Profile", user_path(@user), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>