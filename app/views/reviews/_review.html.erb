<div class="card mb-3">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <%= link_to review.user.username, user_path(review.user) %>
        <span class="badge bg-info"><%= review.rating %>/10</span>
      </div>
      <small class="text-muted"><%= time_ago_in_words(review.created_at) %>前</small>
    </div>
  </div>
  <div class="card-body">
    <p class="card-text"><%= review.content %></p>
    
    <% if logged_in? && (current_user == review.user || current_user.admin?) %>
      <div class="mt-2">
        <%= link_to "编辑", edit_review_path(review), class: "btn btn-sm btn-outline-secondary" %>
        <%= button_to "删除", review_path(review), method: :delete, data: { confirm: "确定要删除这条评论吗？" }, class: "btn btn-sm btn-outline-danger" %>
      </div>
    <% end %>
  </div>
  
  <!-- 回复部分 -->
  <div class="card-footer">
    <% if review.comments.any? %>
      <h6><%= review.comments.count %>条回复</h6>
      <div class="comments mb-3">
        <%= render partial: 'comments/comment', collection: review.comments %>
      </div>
    <% end %>
    
    <% if logged_in? %>
      <%= form_with(model: [review, Comment.new], local: true) do |f| %>
        <div class="input-group">
          <%= f.text_field :content, placeholder: "添加回复...", class: "form-control" %>
          <button type="submit" class="btn btn-outline-primary">回复</button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>