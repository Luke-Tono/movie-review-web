<!-- 标题和排序按钮组 -->
<div class="row mb-4">
  <div class="col-md-8">
    <h1 class="mb-3">所有电影</h1>
    <div class="btn-group">
      <%= link_to "全部", movies_path, class: "btn btn-outline-secondary #{'active' unless params[:sort]}" %>
      <%= link_to "最新上映", movies_path(sort: "year"), class: "btn btn-outline-secondary #{'active' if params[:sort] == 'year'}" %>
      <%= link_to "最高评分", movies_path(sort: "rating"), class: "btn btn-outline-secondary #{'active' if params[:sort] == 'rating'}" %>
    </div>
  </div>
  
  <% if current_user&.admin? %>
    <div class="col-md-4 text-end align-self-end">
      <%= link_to "添加新电影", new_movie_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<!-- 电影卡片列表 -->
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-4 mb-4">
      <div class="card movie-card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-2"><%= link_to movie.title, movie_path(movie), class: "text-decoration-none text-dark" %></h5>
          <div class="mb-2">
            <span class="badge bg-info text-white me-1">
              <i class="fas fa-star"></i> <%= movie.average_rating %>
            </span>
            <small class="text-muted">
              <%= movie.release_year %>年 
              <% if movie.duration.present? %>| <%= movie.duration %>分钟<% end %>
              | <%= movie.reviews.count %>条评论
            </small>
          </div>
          <p class="card-text text-muted small"><%= truncate(movie.synopsis, length: 100) %></p>
        </div>
        <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
          <%= link_to "查看详情", movie_path(movie), class: "btn btn-sm btn-outline-primary" %>
          <% if logged_in? && current_user.admin? %>
            <%= link_to "编辑", edit_movie_path(movie), class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- 分页 -->
<% if @movies.respond_to?(:total_pages) && @movies.total_pages > 1 %>
  <div class="d-flex justify-content-center mt-4">
    <% if defined?(Kaminari) %>
      <%= paginate @movies %>
    <% elsif defined?(WillPaginate) %>
      <%= will_paginate @movies, class: "pagination" %>
    <% end %>
  </div>
<% end %>

<!-- 没有电影时的提示 -->
<% if @movies.empty? %>
  <div class="alert alert-info text-center p-4">
    <i class="fas fa-film fa-2x mb-3"></i>
    <p class="mb-0">目前还没有添加任何电影。</p>
  </div>
<% end %>