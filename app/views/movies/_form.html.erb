<%= form_with(model: @movie, local: true) do |f| %>
  <%= render 'shared/errors', obj: @movie %>
  
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :title, "电影名称", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
      
      <div class="mb-3">
        <%= f.label :release_year, "上映年份", class: "form-label" %>
        <%= f.number_field :release_year, class: "form-control", min: 1900, max: Date.current.year %>
      </div>
      
      <div class="mb-3">
        <%= f.label :director, "导演", class: "form-label" %>
        <%= f.text_field :director, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :cast, "主演", class: "form-label" %>
        <%= f.text_field :cast, class: "form-control", placeholder: "多个演员用逗号分隔" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :duration, "时长(分钟)", class: "form-label" %>
        <%= f.number_field :duration, class: "form-control", min: 1 %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :language, "语言", class: "form-label" %>
        <%= f.text_field :language, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :genres, "类型", class: "form-label" %>
        <%= f.text_field :genres, class: "form-control", placeholder: "多个类型用逗号分隔" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :poster_image, "海报图片URL", class: "form-label" %>
        <%= f.text_field :poster_image, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :synopsis, "剧情简介", class: "form-label" %>
        <%= f.text_area :synopsis, rows: 5, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="text-center">
    <%= f.submit "保存", class: "btn btn-primary" %>
    <%= link_to "取消", movies_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>