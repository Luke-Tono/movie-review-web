<%= form_with(model: @movie, local: true) do |f| %>
  <%= render 'shared/errors', obj: @movie %>
  
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :title, "Movie Title", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
      
      <div class="mb-3">
        <%= f.label :release_year, "Release Year", class: "form-label" %>
        <%= f.number_field :release_year, class: "form-control", min: 1900, max: Date.current.year %>
      </div>
      
      <div class="mb-3">
        <%= f.label :director, "Director", class: "form-label" %>
        <%= f.text_field :director, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :cast, "Cast", class: "form-label" %>
        <%= f.text_field :cast, class: "form-control", placeholder: "Separate multiple actors with commas" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :duration, "Duration (minutes)", class: "form-label" %>
        <%= f.number_field :duration, class: "form-control", min: 1 %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :language, "Language", class: "form-label" %>
        <%= f.text_field :language, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :genres, "Genres", class: "form-label" %>
        <%= f.text_field :genres, class: "form-control", placeholder: "Separate multiple genres with commas" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :poster_image, "Poster Image URL", class: "form-label" %>
        <%= f.text_field :poster_image, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :synopsis, "Synopsis", class: "form-label" %>
        <%= f.text_area :synopsis, rows: 5, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="text-center">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", movies_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>