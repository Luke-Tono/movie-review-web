<!-- app/views/watchlists/_form.html.erb -->
<%= form_with(model: @watchlist, local: true) do |f| %>
  <%= render 'shared/errors', obj: @watchlist %>
  
  <div class="mb-3">
    <%= f.label :name, "Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>
  
  <div class="mb-3 form-check">
    <%= f.check_box :is_public, class: "form-check-input" %>
    <%= f.label :is_public, "Make this watchlist public", class: "form-check-label" %>
    <div class="form-text">Public watchlists can be viewed by other users</div>
  </div>
  
  <div class="text-center">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>