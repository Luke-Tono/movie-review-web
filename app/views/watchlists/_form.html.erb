<!-- app/views/watchlists/_form.html.erb -->
<%= form_with(model: @watchlist, local: true) do |f| %>
  <%= render 'shared/errors', obj: @watchlist %>
  
  <div class="mb-3">
    <%= f.label :name, "名称", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= f.label :description, "描述", class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>
  
  <div class="mb-3 form-check">
    <%= f.check_box :is_public, class: "form-check-input" %>
    <%= f.label :is_public, "公开此观影清单", class: "form-check-label" %>
    <div class="form-text">公开的观影清单可以被其他用户查看</div>
  </div>
  
  <div class="text-center">
    <%= f.submit "保存", class: "btn btn-primary" %>
  </div>
<% end %>