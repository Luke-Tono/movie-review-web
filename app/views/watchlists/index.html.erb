<div class="row mb-4">
  <div class="col-md-8">
    <h1>My Watchlists</h1>
  </div>
  <div class="col-md-4 text-end">
    <%= link_to "Create New Watchlist", new_watchlist_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @watchlists.any? %>
  <div class="row">
    <% @watchlists.each do |watchlist| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-header">
            <h5 class="card-title mb-0"><%= watchlist.name %></h5>
          </div>
          <div class="card-body">
            <p class="card-text"><%= truncate(watchlist.description, length: 100) || "No description" %></p>
            <p class="card-text">
              <small class="text-muted">
                Contains <%= watchlist.movies.count %> movies
                <% if watchlist.is_public %>
                  <span class="badge bg-success">Public</span>
                <% else %>
                  <span class="badge bg-secondary">Private</span>
                <% end %>
              </small>
            </p>
          </div>
          <div class="card-footer">
            <%= link_to "View Details", watchlist_path(watchlist), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Edit", edit_watchlist_path(watchlist), class: "btn btn-sm btn-outline-secondary" %>
            <%= button_to "Delete", watchlist_path(watchlist), method: :delete, data: { confirm: "Are you sure you want to delete this watchlist?" }, class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    You haven't created any watchlists yet. Click the button above to create one!
  </div>
<% end %>